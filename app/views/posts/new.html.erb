<title>Create post</title>
<h1>Create Post</h1>
<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<%= form_for(@post) do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_field :description, class: 'form-control' %>

			<%= f.label :category %>
			<%= f.select :category, [['Technology', 1], ['Books', 2], ['Furniture', 3], ['Service', 4]], class: 'form-control' %>

			<%= f.label :price%>
			<%= f.select :price, [['$', 1], ['$$', 2], ['$$$', 3]], class: 'form-control' %>

			<%= f.submit "Create Post", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
