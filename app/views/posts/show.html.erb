    <script src="../../js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../../js/bootstrap.min.js"></script>

</head>
    <nav class="navbar-color navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/posts">Oskimart</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/about">About</a>
                    </li>
                    <li class = "dropdown">
                        <a class = "dropdown-toggle" data-toggle="dropdown" role="button">
                          Categories <b class="caret"></b>
                        </a>
              <ul class="dropdown-menu">
                <li><%=link_to "Books", posts_path(category_id: 'Books')%></li>
                <li><%=link_to "Technology", posts_path(category_id: 'Technology')%></li>
                <li><%=link_to "Furniture", posts_path(category_id: 'Furniture')%></li>
                <li><%=link_to "Service", posts_path(category_id: 'Service')%></li>
                <li><%=link_to "Other", posts_path(category_id: 'Other')%></li>
              </ul>
                          
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <%if user_signed_in? %>
                      <li>
                        <%=link_to user_path(current_user.id) do%>
                          <%=User.find(current_user.id).first_name%>
                          <span class="glyphicon glyphicon-user"></span> 
                        <%end%>
                      </li>
                      <li>
                        
                        <%=link_to destroy_user_session_path, :method=>'delete' do%>
                          Logout
                          <span class="glyphicon glyphicon-log-out"></span> 
                        <%end%>
                          
                      </li>

                    <% else %>
                      <li>
                        <%=link_to new_user_session_path do%>
                          Login
                          <span class="glyphicon glyphicon-log-in"></span> 
                        <% end %>
                      </li>
                    <%end%>

                </ul>
            </div>
        </div>
    </nav>

    
    <div class = "container">
        <h1>View Post</h1>
            <div class = "row top-buffer-35 newsfeed-post">
                <h2 class = "post-title">Post Title: <%= @post.title%></h2>
                <div class = "col-md-4">
                    <img class="img-responsive" src="http://www.livelifecycling.com/portals/0/Tours/StMaloNice/nice2.jpg" alt="">
                </div>
                <div class = "col-md-7 col-md-offset-1">
                    <div class = "row post-description top-buffer-25">
                      Description: <%= @post.description %>
                    </div>
                    <div class = "row top-buffer-25">
                      <div class = "col-md-3">
                        Category: <%= @post.category %>
                      </div>

                      <div class = "col-md-3 col-md-offset-1"> Price: <%= @post.price %> </div>
                      <div class = "col-md-3 col-md-offset-1"> Posted By: <%= User.find(@post.user_id).first_name %> </div>
                    </div>
                    <div class = "row top-buffer-25">
                        <% if current_user.id == @post.user_id %>
                            <%= link_to "Edit", edit_post_path(@post), class: "post-option-button"%>
                            <%= link_to "Remove", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "post-option-button" %>
                        <% end %>
                        <a class = "post-option-button show-comments">Show Comments</a>
                  </div>
                  <div>
                    <%= image_tag @post.image_url(:thumb) %>
                  </div>
                </div>
            </div>
    </div>
    <div class="container comments-container bottom-padding-30">
      <h2>Comments</h2>
      	<%Comment.all.where(:post_id => @post.id).each do |comment| %>
        <div class = "row">
          <div class = "col-md-4 col-md-offset-1">
            <h4 class = "comment-name-text"><%= User.find(comment.user_id).first_name%></h4>
          </div>

          <div class="col-md-6 offset-1">
              <h6><%= comment.text %></h6>
          </div>
        </div>
      	<% end %>
    </div> 

      <div class = "new-comment-button">+ New Comment </div>
      <div class="col-md-1 col-md-offset-6 top-buffer-25">
        <%= link_to 'Back', posts_path, class: "back-button"%>
      </div>
</html>

