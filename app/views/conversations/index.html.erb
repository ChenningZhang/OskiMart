      <h1>Your Conversations</h1>

    </div>
    <div class = "col-md-3 top-buffer-15">
      <ul class="nav nav-pills nav-stacked">
        <%= mailbox_section 'inbox', @box %>
        <%= mailbox_section 'sent', @box %>
        <%= mailbox_section 'trash', @box %>
      </ul>

      <ul class = "top-buffer-200 shift-left-40">
        <div>
          <%= link_to 'Start conversation', new_conversation_path, class: 'btn btn-lg btn-primary' %>
        </div>

        <% if @box == 'trash' %>
          <div class="top-buffer-25">
            <%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                           data: {confirm: 'Are you sure?'} %>
          </div>
        <% end %>
      </ul>
    </div>

    <div class = "col-md-8 col-md-offset-1">
      <ul class="list-group">
        <%= render partial: 'conversations/conversation', collection: @conversations %>
      </ul>

    <%= will_paginate @conversations %>
